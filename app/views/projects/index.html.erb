<div class="container">

	<br>


	<% if user_signed_in? %>
		<button type="button" class="btn btn-default">
		<%= link_to "Create Project", new_project_path %>
		</button>
		<p></p>
		<% @projects = Project.where(:user_id => current_user) %>
	<% else %>
	<% end %>


	<div class="row">
		<%= @projects.each do |project| %>
			  <div class="col-sm-6 col-md-4">
			    <div class="thumbnail" style="min-height:500px;height:500px;">
			      <%= link_to_image (project.image.url), project_path(project) %>
			      <div class="caption">
			        <h2><%= link_to project.title, project_path(project) %></h2>
			        <p><%= truncate (project.body), :length =>180 %></p>
			      </div>
			    </div>
			  </div>
		<% end %>
	</div>


</div>


